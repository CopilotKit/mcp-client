{
  "name": "whiteboard-canvas",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev-frontend": "pnpm i && next dev --turbopack",
    "dev-agent": "cd agent && poetry install && poetry run langgraph dev --host localhost --port 8123 --no-browser",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build-electron": "tsc --project electron/tsconfig.json",
    "electron:dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron -r ts-node/register electron/main.ts\"",
    "electron:build": "next build && pnpm build-electron && concurrently \"next start\" \"wait-on http://localhost:3000 && electron-builder\"",
    "electron:pack": "next build && pnpm build-electron && concurrently \"next start\" \"wait-on http://localhost:3000 && electron-builder --dir\""
  },
  "main": "electron/main.js",
  "author": {
    "name": "minhaj",
    "email": "minhaj@produx.ai"
  },
  "dependencies": {
    "@copilotkit/react-core": "^1.6.0",
    "@copilotkit/react-ui": "^1.6.0",
    "@copilotkit/runtime": "^1.6.0",
    "@copilotkit/runtime-client-gql": "^1.8.4",
    "@heroicons/react": "^2.2.0",
    "@langchain/openai": "^0.4.5",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@types/uuid": "^10.0.0",
    "class-validator": "^0.14.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "next": "15.2.0-canary.73",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-spreadsheet": "^0.9.5",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "eslint": "^9",
    "eslint-config-next": "15.2.0-canary.73",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.mcp.client",
    "files": [
      "electron/**/*",
      "out/**/*",
      "!**/*.ts"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": ["dmg", "zip"]
    },
    "linux": {
      "target": ["AppImage", "deb", "tar.gz"]
    }
  },
  "packageManager": "pnpm@10.2.1"
}
